<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="0dp">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#0A9949"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:id="@id/linToolBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
       <!-- android:background="@drawable/bar_bg"-->
        <ImageView
            android:id="@id/imgHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bar_home_selected" />

        <ImageView
            android:id="@id/imgClassify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bar_class_normal" />

        <ImageView
            android:id="@id/imgSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bar_search_normal" />

        <ImageView
            android:id="@id/imgShoppingCar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bar_shopping_normal" />
    </LinearLayout>
</LinearLayout><!--</merge>--><!--<merge xmlns:android="http://schemas.android.com/apk/res/android" >--><!--android:background="@drawable/number_bg"-->